@model App_Estudios_G7.Models.CURSO

@{
    ViewBag.Title = "CrearCurso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Crear Curso</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label class="control-label col-md-2">Nombre</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.nombre,"",new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.creador, "creador", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("creador", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.creador, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="btn-lg">
                    <input type="submit" value="Crear Curso" class="btn btn-primary" />
                </div>
            </div>
    </div>

    }

    <div>
        @Html.ActionLink("Regresar al Inicio", "CursoIndex")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
