@model App_Estudios_G7.Models.USUARIO

@{
    ViewBag.Title = "Registrarse";
    Layout = "~/Views/_LayoutPage2.cshtml";
}

<h2>Registrarse</h2>

<div class="form-horizontal">
    <h4>USUARIO</h4>
    


    <form action="Registrarse" method="post">
        <div class="alert alert-primary" role="alert">
            @ViewBag.Consulta
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Nick</label>
            <input type="text" class="col-md-2" name="nick" placeholder="Nick Name" required="" />
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Contraseña</label>
            <input type="text" class="col-md-2" name="contra" placeholder="Password" required="" />
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Primer Nombre</label>
            <input type="text" class="col-md-2" name="nombre_1" placeholder="Primer nombre" required="" />
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Segundo nombre</label>
            <input type="text" class="col-md-2" name="nombre_2" placeholder="Segundo nombre" required="" />
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Primer apellido</label>
            <input type="text" class="col-md-2" name="apellido_1" placeholder="Primer apellido" required="" />
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Segundo apellido</label>
            <input type="text" class="col-md-2" name="apellido_2" placeholder="Segundo apellido" required="" />
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Edad</label>
            <input type="number" class="col-md-2" name="edad" placeholder="Edad" required="" />
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Correo</label>
            <input type="email" class="col-md-2" name="correo" placeholder="Correo" required="" />
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Rol</label>
            <select name="rol" class="col-md-2" required>
                <option value="Administrador">Administrador</option>
                <option value="Estudiante">Estudiante</option>
                <option value="Maestro">Maestro</option>
            </select>
        </div>
        <div class="form-group">
            <button class="btn btn-primary">Registrarse</button>
        </div>

    </form>

</div>


<div>
    @Html.ActionLink("Iniciar sesion", "Login")
</div>
