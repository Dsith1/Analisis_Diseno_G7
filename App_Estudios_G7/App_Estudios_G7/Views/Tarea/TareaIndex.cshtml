@model IEnumerable<App_Estudios_G7.Models.TAREA>

@{
    ViewBag.Title = "Tareas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="jumbotron">
    <h1>Cursos</h1>

    <div class="row" style="text-align:right;">
        <a class="btn btn-primary btn-lg" href="/Tarea/TareaCreate">Crear nueva tarea</a>
    </div>

    <br />
    <br />

    <table class="table table-striped">
        <tr>
            <th>
                Enunciado
            </th>
            <th>
                Fecha de entrega
            </th>
            <th>
                Ponderacion
            </th>
            <th>
                Curso
            </th>
            <th>
                Estado
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Enunciado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Entrega)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ponderacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CURSO1.nombre)
                </td> 
                @if(DateTime.Compare(item.Entrega,DateTime.Now) > 0)
                {
                    <td>
                        Activa
                    </td>
                }else {
                    <td>
                        Vencida
                    </td>
                }
                <td>
                    @Html.ActionLink("Ver Detalle", "TareaDetails", new { id = item.id_tarea })
                </td>
            </tr>
        }

    </table>
</div>